
{% extends "irisreferencing-base.html.twig" %}

{% set reportType = _request.query.get('reportType') %}

{% block breadcrumbs %}
    <ul id="connect_breadcrumb">
        <li class="home"><a href="/">Connect</a></li>
        <li><a href="/iris-referencing">Referencing</a></li>
        <li class="last"><a href="/iris-referencing/summary?uuid={{ referencingApplicationUuId }}">Reference no: {{ referenceNumber }}</a></li>
        <li class="current_page">View {{ reportType | capitalize }} Report</li>
    </ul>
{% endblock %}

{% block body %}

    <div class="pull-right">
        <a href="/iris-referencing/download-report?uuid={{ referencingApplicationUuId }}&reportType={{ reportType }}" class="btn btn-default">
            Download Report
        </a>
    </div>

    <iframe src="/iris-referencing/inline-report?uuid={{ referencingApplicationUuId }}&reportType={{ reportType }}" width="100%" height="1000" border="0" id="report_preview"></iframe>

{% endblock %}